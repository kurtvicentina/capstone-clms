<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link type="text/css" rel="stylesheet" href="/css/styles.css">
    <link rel="icon" href="images/cuyapo_logo.ico" type="image/ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

    <title>CLMS</title>

 <style>
        body {
            background-color: #f5f5f5;
            font-family: 'Roboto', sans-serif;
        }
</style>
</head>

<body>


    {{#if isAuthenticated}}
    <div class="main-container d-flex">
        <div class="sidebar" id="side_nav">
            <div class="header-box px-2 pt-3 pb-4 d-flex justify-content-between">
                <h1 class="fs-4"><span class="bg-white text-dark rounded shadow px-2 me-2">CLMS</span> <span
                        class="text-dark">Cuyapo</span></h1>
                <button class="btn d-md-none d-block close-btn px-1 py-0 text-white"><i
                        class="fal fa-stream"></i></button>
            </div>

            <!-- Sidebar items for Librarian -->
            {{#if isLibrarian}}
            <ul class="list-unstyled px-2">
                <li class=""><a href="/" class="text-decoration-none px-3 py-2 d-block"><i
                            class="bi bi-card-list px-3"></i> Dashboard</a></li>
                <li class=""><a href="/inventory" class="text-decoration-none px-3 py-2 d-block"><i
                            class="bi bi-collection-fill px-3"></i> Inventory Status</a></li>
                <li class=""><a href="/viewbook" class="text-decoration-none px-3 py-2 d-block"><i
                            class="bi bi-stack px-3"></i>
                        Book List</a></li>
                <li class=""><a href="/viewuser"
                        class="text-decoration-none px-3 py-2 d-block d-flex justify-content-between">
                        <span><i class="bi bi-people-fill px-3"></i> User List</span>
                    </a>
                </li>
                <li class=""><a href="/viewrent" class="text-decoration-none px-3 py-2 d-block"><i
                            class="bi bi-basket-fill px-3"></i></i>
                        Borrow List</a>
                </li>
                <li class=""><a href="/viewreturned" class="text-decoration-none px-3 py-2 d-block"><i
                            class="bi bi-cart-check-fill px-3"></i> Returned List</a>
                </li>
                <li class=""><a href="/system-logs" class="text-decoration-none px-3 py-2 d-block"><i
                            class="bi bi-journal px-3"></i> System Logs</a>
                </li>
                <li class=""><a href="/reports" class="text-decoration-none px-3 py-2 d-block"><i
                            class="bi bi-bar-chart-steps px-3"></i> Reports</a>
                </li>
            </ul>
            <hr class="h-color mx-2">
            {{/if}}

            <!-- Sidebar items for Regular User -->
            {{#if isUser}}
            <ul class="list-unstyled px-2">
                <li class=""><a href="/" class="text-decoration-none px-3 py-2 d-block"><i
                            class="bi bi-card-list px-3"></i> Dashboard</a></li>
                <li class=""><a href="/viewuserbook" class="text-decoration-none px-3 py-2 d-block"><i
                            class="bi bi-stack px-3"></i>
                        Book List</a></li>
                <li class=""><a href="/viewuserrent" class="text-decoration-none px-3 py-2 d-block"><i
                            class="bi bi-basket-fill px-3"></i></i>
                        Borrow List</a>
                </li>
                <li class=""><a href="/viewuserreturned" class="text-decoration-none px-3 py-2 d-block"><i
                            class="bi bi-cart-check-fill px-3"></i> Returned List</a></li>
            </ul>
            <hr class="h-color mx-2">
            {{/if}}



            <!-- Common Sidebar items for both Librarian and Regular User -->
            <ul class="list-unstyled px-2">
                <li class=""><a href="/editaccount/" class="text-decoration-none px-3 py-2 d-block"><i
                            class="fal fa-bars"></i>
                        Account</a></li>
                <li class=""><a href="/logout" class="text-decoration-none px-3 py-2 d-block"><i
                            class="fal fa-bell"></i>
                        Logout</a></li>
            </ul>
        </div>
        {{/if}}

        <div class="content container">
            {{{body}}}
        </div>
    </div>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            var path = window.location.pathname;

            $(".sidebar ul li").each(function () {
                var href = $(this).find("a").attr("href");
                if (path === href) {
                    $(this).addClass("active");
                }
            });

            $('.open-btn').on('click', function () {
                $('.sidebar').addClass('active');
            });

            $('.close-btn').on('click', function () {
                $('.sidebar').removeClass('active');
            });
        });
    </script>
</body>

</html>