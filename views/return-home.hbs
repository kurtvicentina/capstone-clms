<style>
  #searchInput{
    width: min(400px);
  }
</style>

<div class="container pt-5">
<div class="row">
  <div class="col-6"><h1>Return List</h1></div>
 
</div>
<div class="mb-3">
        <label for="searchInput" class="form-label">Search:</label>
        <input type="text" class="form-control" id="searchInput" placeholder="Type to search">
    </div>

<table class="table table-info table-striped table-hover text-center table-bordered border-info">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">ISBN</th>
      <th scope="col">Returned Book</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Contact Number</th>
      <th scope="col">Borrowed Date</th>
      <th scope="col">Returned Date</th>
    </tr>
</thead>
  <tbody>

    {{#each data}}
    <tr>
      <th scope="row">{{this.returnId}}</th>
      <td>{{this.isbn}}</td>
      <td>{{this.title}}</td>
      <td>{{this.first_name}}</td>
      <td>{{this.last_name}}</td>
      <td>{{this.contact}}</td>
      <td>{{formatDate this.borrow_date}}</td>
      <td>{{formatDate this.actual_return_date}}</td>
    </tr>
    {{/each}}

  </tbody>
</table>
</div>

<script>
  document.getElementById('searchInput').addEventListener('input', function () {
        let searchText = this.value.toLowerCase();
        let rows = document.querySelectorAll('tbody tr');

        rows.forEach(row => {
            let textContent = row.textContent.toLowerCase();
            row.style.display = textContent.includes(searchText) ? '' : 'none';
        });
    });
</script>